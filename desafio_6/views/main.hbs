<!-- Products Form -->
<div style="display: flex; flex-direction: column; align-items: center;">
    <div><h3 style="text-align: center; margin-top: 16px;"> Agrega un producto! </h3></div>
    <form onsubmit="return addProduct();">
        <div style="margin-bottom: 16px;">
            <div style="display: flex;justify-content: center;align-items: center;flex-direction: column;">
                <label for="name"> Nombre: </label>
                <br>
                <input type="text" name="name" id="name" style="margin-bottom: 16px;" class="input-file" required>
            </div>
            <div style="display: flex;justify-content: center;align-items: center;flex-direction: column;">
                <label for="description"> Description: </label>
                <br>
                <textarea name="description" id="description" cols="30" rows="10" style="margin-bottom: 16px;" class="input-file" required></textarea>
            </div>
            <div style="display: flex;justify-content: center;align-items: center;flex-direction: column;">
                <label for="price"> Precio: </label>
                <br>
                <input type="number" name="price" id="price" style="margin-bottom: 16px;" step=".01" class="input-file" required>
            </div>
            <div style="display: flex;justify-content: center;align-items: center;flex-direction: column;">
                <label for="image"> URL Imagen: </label>
                <br>
                <input type="text" name="image" id="image" style="margin-bottom: 16px;" class="input-file" required>
            </div>
            <div style="display: flex; justify-content: center; align-items: center;">
                <input type="submit" value="Crear producto" class="submit-button" >
            </div>
        </div>
    </form>
</div>
<div>
    <table id="products-list">
    </table>
</div>
<!-- Chat Form -->
<div style="display: flex; flex-direction: column; align-items: center;">
    <div><h3 style="text-align: center; margin-top: 16px;"> Chat </h3></div>
    <form onsubmit="return sendMessage();">
        <div style="margin-bottom: 16px;">
            <div style="display: flex;justify-content: center;align-items: center;flex-direction: column;">
                <label for="email"> Email: </label>
                <br>
                <input type="text" name="email" id="email" style="margin-bottom: 16px;" class="input-file" required>
            </div>
            <div style="display: flex;justify-content: center;align-items: center;flex-direction: column;">
                <label for="message"> Mensaje: </label>
                <br>
                <textarea name="message" id="message" cols="30" rows="10" style="margin-bottom: 16px;" class="input-file" required></textarea>
            </div>
            <div style="display: flex; justify-content: center; align-items: center;">
                <input type="submit" value="Enviar" class="submit-button" >
            </div>
        </div>
    </form>
</div>
